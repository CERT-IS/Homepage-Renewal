<!--=== Header ===-->    
    <div class="header">
        <div class="container">
            <!-- Logo -->
            <a class="logo" href="<%= root_path %>">
                <img src="/assets/bootstrap/logo1-default.png" alt="Logo">
            </a>
            <!-- End Logo -->
            
            <!-- Topbar -->
            <div class="topbar">
                <ul class="loginbar pull-right">
                    <% if user_signed_in? %>
                        <% if current_user.member? %>
                        <li class="hoverSelector">
                            <i class="fa fa-globe"></i>
                            <a>SiteMap</a>
                            <ul class="languages hoverSelectorBlock">
                                <li class="active">
                                    <a href="#">English <i class="fa fa-check"></i></a> 
                                </li>
                                <li><a href="#">Spanish</a></li>
                                <li><a href="#">Russian</a></li>
                                <li><a href="#">German</a></li>
                            </ul>
                        </li>
                        <li class="topbar-devider"></li>   
                        <li><a href="page_faq.html">Report</a></li>  
                        <li class="topbar-devider"></li>
                        <li class="hoverSelector">
                            <a><%= current_user.uid %></a>
                            <ul class="languages hoverSelectorBlock">
                                <li><a href="<%= user_path(current_user.uid) %>">Profile</a> </li>
                                <li><a href="#">Settings</a></li>
                                <li class="active"><%= link_to "Logout", destroy_user_session_path, method: :delete, data: { confirm: "정말 로그아웃 하시겠습니까?" } %></li>
                            </ul>
                        </li>
                        <% else %>
                            <li><a><%= current_user.uid %></a></li>
                            <li class="topbar-devider"></li>
                            <li><a style="font-family: 'Helvetica Neue',Helvetica,Arial,sans-serif;">준회원</a></li>
                            <li class="topbar-devider"></li>
                            <li class="active"><%= link_to "Logout", destroy_user_session_path, method: :delete, data: { confirm: "정말 로그아웃 하시겠습니까?" } %></li>
                        <% end %>
                    <% else %>
                        <li><a href="<%= new_user_session_path %>">Login</a></li>
                        <li class="topbar-devider"></li>
                        <li><a href="<%= new_user_registration_path %>">SignUp</a></li>
                    <% end %>
                </ul>
            </div>
            <!-- End Topbar -->

            <!-- Toggle get grouped for better mobile display -->
