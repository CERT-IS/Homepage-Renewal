<!--=== Breadcrumbs ===-->
<div class="breadcrumbs">
    <div class="container">
        <h1 class="pull-left">Project Manage</h1>
    </div>
</div><!--/breadcrumbs-->
<!--=== End Breadcrumbs ===-->

<div class="container content">
    <div class="row">
    	<div class="col-md-3"></div>
    	<div class="col-md-6">

            <div class="headline"><h2>승인대기 관리</h2></div>

            <div class="margin-bottom-40"></div>

            <!--Table Striped-->
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>닉네임</th>
                        <th>성명</th>
                        <th>프로필 보기</th>
                        <th>승인</th>
                    </tr>
                </thead>
                <tbody>
                    <% @unreceiveds.each do |unreceived| %>
                        <tr>
                            <td><%= unreceived.uid %></td>
                            <td><%= unreceived.nickname %></td>
                            <td><%= unreceived.realname %></td>
                            <td><%= link_to '<i class="rounded-x fa fa-eye"></i>'.html_safe, user_profile_index_path(unreceived.uid) %></td>
                            <td><%= link_to '<i class="rounded-x fa fa-plus"></i>'.html_safe, approval_project_path(@project, user_id: unreceived.id) %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
            <!--End Table Striped-->

            <div class="margin-bottom-40"></div>

            <div class="headline"><h2>멤버 관리</h2></div>

            <div class="margin-bottom-40"></div>

            <!--Table Striped-->
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>닉네임</th>
                        <th>성명</th>
                        <th>프로필 보기</th>
                        <th>강퇴</th>
                    </tr>
                </thead>
                <tbody>
                    <% @members.each do |member| %>
                        <tr>
                            <td><%= member.uid %></td>
                            <td><%= member.nickname %></td>
                            <td><%= member.realname %></td>
                            <td><%= link_to '<i class="rounded-x fa fa-eye"></i>'.html_safe, user_profile_index_path(member.uid) %></td>
                            <td></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
            <!--End Table Striped-->
        </div>
        <div class="col-md-3"></div>
	</div>
</div>