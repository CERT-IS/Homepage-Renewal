<!--=== Profile ===-->
<div class="container content profile">
	<div class="row">
        <!--Left Sidebar-->
        <div class="col-md-3 md-margin-bottom-40">
            <%= image_tag @user.avatar.url, class: "img-responsive profile-img margin-bottom-20", style: "height:264px;" %>

            <div class="panel-heading-v1 overflow-h">
                <h1 class="heading-xs"> <%= @user.uid %> </h1> 
                <p> <%= @user.realname %> </p>
            </div>
            <hr>

            <ul class="list-group sidebar-nav-v1 margin-bottom-40" id="sidebar-nav-1">
                <li class="list-group-item active">
                    <a href="<%= user_path(@user.uid) %>"><i class="fa fa-bar-chart-o"></i> Timeline</a>
                </li>
                <li class="list-group-item">
                    <a href="<%= user_profile_index_path(@user.uid) %>"><i class="fa fa-user"></i> Profile</a>
                </li>                                       
                <li class="list-group-item">
                    <a href="#"><i class="fa fa-cubes"></i> My Projects</a>
                </li>
                <li class="list-group-item">
                    <a href="#"><i class="fa fa-comments"></i> Comments</a>
                </li>
                <li class="list-group-item">
                    <a href="#"><i class="fa fa-cog"></i> Settings</a>
                </li> 
            </ul>   

            <hr>

            <div class="panel panel-profile">
                <div class="panel-heading overflow-h">
                    <h2 class="panel-title heading-sm pull-left"><i class="fa fa-lightbulb-o"></i> Social Contacts </h2>
                    <a href="#"><i class="fa fa-cog pull-right"></i></a>
                </div>
                <div class="panel-body">
                    <ul class="list-unstyled social-contacts-v3">
                        <li><i class="rounded-x tw fa fa-twitter"></i> <a href="#">edward.rooster</a></li>
                        <li><i class="rounded-x fb fa fa-facebook"></i> <a href="#">Edward Rooster</a></li>
                        <li><i class="rounded-x gh fa fa-github"></i> <a href="#">edwardRooster77</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <!--End Left Sidebar-->

        <!-- Profile Content -->            
        <!-- Begin Content -->
            <div class="col-md-9">
                <% if @boards.present? %>
                <ul class="timeline-v1">
                    <%= render partial: 'timeline', collection: @boards, as: :board %>
                    <li class="clearfix" style="float: none;"></li>
                </ul>
                <%= link_to "Load More", "/users/admin?page=#{@page+1}", class: "btn-u btn-u-default btn-block", remote: true, id: "timeline_loadmore", style: "color: #fff;" unless @page.equal?(@page_max) %>
                <% else %>
                    <div class="error-v1">
                        <span class="error-v1-title">Empty</span>
                        <span>검색 결과 없음!</span>
                        <p>아래의 글쓰기 버튼을 통해 새 글을 작성해 주세요.</p>
                        <a class="btn-u btn-bordered" href="/frees/new">Go! Go!</a>
                    </div>
                <% end %>
            </div>
            <!-- End Content -->
        <!-- End Profile Content -->            
    </div>
</div><!--/container-->    
<!--=== End Profile ===-->
<script type="text/javascript">
    jQuery(document).ready(function() {
        App.initScrollBar();
        });
</script>