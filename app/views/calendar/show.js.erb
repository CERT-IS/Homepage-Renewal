$('#eventShowTitle').text('<%= @event.title %>');
$('#eventShowDate').text('일시: <%= @event_day%>');
$('#event_show_id').val('<%= @event.id %>');
<% if @event.location.present? %>
$('#eventShowLoc').text('장소: <%= @event.location %>')
<% else %>
$('#eventShowLoc').text('');
<% end %>

<% if @event.description.present? %>
<% description   = @event.description.gsub(/(?:\n\r?|\r\n?)/, "<br>") %>
<% description   = auto_link(description, :html => { :target => '_blank' }) do |text| %>
						<% truncate(text, :length => 50) %>
				   <% end %>
$('#eventShowDes').html('설명: <br><br> <%=h simple_format description.html_safe %>');
<% else %>
$('#eventShowDes').text('');
<% end %>