$('#calendar').fullCalendar( 'removeEvents' );
$('#calendar').fullCalendar( 'addEventSource', [<% @events.each do |eventc| %>{id: <%= eventc.id %>,title: '<%= eventc.title %>',start: '<%= eventc.start_allday? ? eventc.start_day.strftime("%Y-%m-%d") : eventc.start_day.strftime("%Y-%m-%d")+"T"+eventc.start_time %>',end: '<%= eventc.end_allday? ? eventc.end_day.strftime("%Y-%m-%d") : eventc.end_day.strftime("%Y-%m-%d")+"T"+eventc.end_time %>'}<% unless eventc == @events.last %>,<% end %><% end %>] );