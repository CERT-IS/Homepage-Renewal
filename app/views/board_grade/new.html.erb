<!--=== Breadcrumbs ===-->
<div class="breadcrumbs">
    <div class="container">
        <h1 class="pull-left">New Board</h1>
    </div>
</div><!--/breadcrumbs-->
<!--=== End Breadcrumbs ===-->

<div class="bg-color-light">
    <div class="container content-sm">
        <div class="tag-box tag-box-v3 form-page">
            <div class="headline"><h3><%= @board_type.realname %></h3></div>                
            <%= form_for @board, url: url_for(controller: controller.controller_name, action: 'create') do |f| %>
                <!--Inputs-->
                <h4>Title <span style="color:#ee9393;font-size:15px;">(자유롭게 작성해주세요.)</span></h4>
                <div id="board-title" class=""> 
                    <%= f.text_field :title , class: "form-control" %>
                </div>
                <!--End Inputs-->

                <div class="margin-bottom-40"></div>

                <!--Textarea-->
                <h4>Contents <span style="color:#ee9393;font-size:15px;">(기입된 형식을 수정하면 등업심사 시 불이익을 받을 수 있습니다.)</span></h4>
                <%= f.text_area :contents, class: "form-control", rows: 15 %>
                <!--End Textarea-->

                <div class="margin-bottom-40"></div>

                <footer style="text-align: right;">
                    <div class="ladda-btn">
                        <button type="submit" class="btn-u pull-right ladda-button" data-style="slide-down" style="border:0;font-weight:400;margin-left:5px;">Submit</button>
                    </div>

                    <button type="button" class="btn-u btn-u-default" onclick="window.history.back();">Back</button>
                </footer>

            <% end %>
        </div>
        
    </div>
</div>
<script type="text/javascript">
    jQuery(document).ready(function() {
        $('#board_contents').val('이름 : \n\n연락처 : \n\n소속 or 학과: \n\n이유 : ');
    });
</script>