<div class="container content profile">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div>
                <div class="panel panel-profile">
                    <div class="panel-heading overflow-h">
                        <h2 class="panel-title heading-sm pull-left"><i class="fa fa-comments"></i>Users Comments</h2>
                        <!--<a href="#"><i class="fa fa-cog pull-right"></i></a>-->
                    </div>

                    <%= form_for @board, url: url_for(controller: controller.controller_name, action: 'create'), html: {class: "sky-form"} do |f| %>
                    <div class="panel-body margin-bottom-50">
                        <div class="media media-v2">
                            <a class="pull-left" href="#">
                                <%= image_tag current_user.avatar.url, class: "media-object rounded-x" %>
                            </a>
                            <div class="media-body">
                                <h4 class="media-heading">
                                    <strong><a href="#"><%= current_user.uid %></a></strong> @EvaNelson
                                </h4>
                                <p>
                                    <%= f.text_field :title, class: "form-control"  %>
                                </p>  
                                <ul class="list-inline pull-right">
                                    <%= f.submit 'Submit', class: "btn-u" %>
                                </ul>
                            </div>
                        </div>
                        <% end %>

                        <% @boards.each do |board| %>
                        <div class="media media-v2 margin-bottom-20">
                            <a class="pull-left" href="#">
                                <%= image_tag board.user.avatar.url, class: "media-object rounded-x" %>
                            </a>
                            <div class="media-body">
                                <h4 class="media-heading">
                                    <strong><a href="#"><%= board.user.uid %></a></strong> @FLennon 
                                    <small><%= time_ago_in_words(board.created_at) %> ago</small>
                                </h4>
                                <p><%= board.title %></p>
                                <ul class="list-inline results-list pull-left">
                                    <li><a href="#">5 Likes</a></li>
                                    <li><a href="#">1 Share</a></li>
                                </ul>
                                <ul class="list-inline pull-right">
                                    <li><a href="#"><i class="expand-list rounded-x fa fa-heart"></i></a></li>
                                    <li><a href="#"><i class="expand-list rounded-x fa fa-retweet"></i></a></li>
                                </ul>

                                <div class="clearfix"></div>
                            </div>    
                        </div>
                        <% end %>
                        <button type="button" class="btn-u btn-u-default btn-block">Load More</button>
                    </div>
                </div>    
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>